<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/sky_background"
    android:weightSum="1"
    android:orientation="vertical">
    	<LinearLayout
    		android:id="@+id/top_elements"
    		android:layout_width="fill_parent"
    		android:layout_height="0dp"
    		android:layout_weight="0.5"
    		android:weightSum="1"
    		android:visibility="invisible"
    		android:orientation="horizontal">
    		   	     
	   	     <ImageView
	   	     	android:src="@drawable/mode_select_label"
	   	     	android:layout_width="0dp"
	   	     	android:layout_height="fill_parent"
	   	     	android:layout_weight="0.5"/>
	   	     <View
	   	     	android:layout_width="0dp"
	   	     	android:layout_height="fill_parent"
	   	     	android:layout_weight="0.2"/>
			 <LinearLayout
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:layout_weight="0.3"
				android:weightSum="1"
				android:orientation="vertical">
		   	    <ImageView
		   	     	android:src="@drawable/tentative_logo_mini"
		   	     	android:layout_width="fill_parent"
		   	     	android:layout_height="0dp"
		   	     	android:layout_weight="0.5"/>
	   	     	<View android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="0.5"/>	
			 </LinearLayout>

    	</LinearLayout>

		<View android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="0.2"/>

      	<LinearLayout
      	 	android:orientation="horizontal"
      	 	android:layout_width="fill_parent"
      	 	android:layout_height="0dp"
      	 	android:layout_weight="0.3"
      	 	android:id="@+id/bottom_elements"
      	 	android:visibility="invisible"
      	 	android:weightSum="0.99">
      	 	<View android:layout_height="fill_parent" android:layout_width="0dp" android:layout_weight="0.33"/>
            <ImageView 
 	            android:layout_weight="0.165"
               	android:layout_height="fill_parent" 
               	android:layout_width="0dp"
               	android:src="@drawable/mode_arcade_button" 
               	android:id="@+id/arcade_mode"/>
            <View android:layout_height="fill_parent" android:layout_width="0dp" android:layout_weight="0.07"/> 
           	<ImageView 
           		android:layout_weight="0.165"
               	android:layout_height="fill_parent"                	
               	android:layout_width="0dp"
               	android:src="@drawable/mode_rush_button" 
               	android:id="@+id/combo_rush_mode"/>
            <View android:layout_height="fill_parent" android:layout_width="0dp" android:layout_weight="0.15"/> 
            <ImageView
				android:src="@drawable/back_arrow" 
				android:layout_weight="0.11"
				android:layout_width="0dp"
				android:layout_height="fill_parent"
				android:id="@+id/back_button" />
      	</LinearLayout>
</LinearLayout>